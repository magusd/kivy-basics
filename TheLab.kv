<WidgetsExample>:
    cols: 3
    ToggleButton:
        on_state: root.on_toggle_button_state(self)
        text:'OFF'
        size_hint: None, 1
        width: '100dp'
    Button:
        text:'Click here'
        on_press: root.on_button_clicked()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "20dp"
        color: 1,0.5,1,1
    
    Switch:
        id: my_switch
        active: True
        size_hint: None, 1
        width: '100dp'

    Slider:
        id: my_slider
        disabled: not my_switch.active
        text:'text'
        min:0
        max:100
        value:50
        orientation: 'vertical'
    BoxLayout:
        orientation:'vertical'
        Label:
            text: str(int(my_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "20dp"
        ProgressBar:
            max:100
            value: my_slider.value 
    TextInput:
        id: my_text_input
        size_hint: None,1
        width: '100dp'
        text: "foo"
        multiline: False
        on_text_validate: root.on_text_validate(self, my_label)
    Label:
        id: my_label
        text: ""
        xablau: "test"

